{
    "name": "chrome utils",
    "description": "some nice stuff for chrome!",
    "version": "1.0",
    "manifest_version": 3,
    "content_scripts": [
        {
            "matches": [
                "<all_urls>"
            ],
            "js": [
                "js/content_allUrls.js"
            ],
            "css": [
                "css/jsonSelector.css"
            ],
            "all_frames": true
        },
        {
            "matches": [
                "<all_urls>"
            ],
            "exclude_matches": [
                "https://www.youtube.com/*"
            ],
            "js": [
                "js/content_noYT.js"
            ],
            "css": [
                "css/jsonSelector.css"
            ],
            "all_frames": true
        },
        {
            "matches": [
                "https://chat.openai.com/c/*",
                "https://chatgpt.com/c/*"
            ],
            "js": [
                "js/content_chatGpt.js"
            ],
            "css": [],
            "all_frames": true
        },
        {
            "matches": [
                "https://*.wikipedia.org/*"
            ],
            "js": [
                "js/content_wikipedia.js"
            ],
            "css": [],
            "all_frames": true
        }
    ],
    "background": {
        "service_worker": "js/background.js"
    },
    "permissions": [
        "clipboard",
        "activeTab",
        "scripting",
        "storage",
        "tabs",
        "webNavigation",
        "webRequest"
    ],
    "host_permissions": [
        "http://localhost:8080/*",
        "https://www.youtube.com/*"
    ],
    "action": {
        "default_popup": "html/popup.html",
        "default_icon": {
            "16": "./images/get_started16.png",
            "32": "./images/get_started32.png",
            "48": "./images/get_started48.png",
            "128": "./images/get_started128.png"
        }
    },
    "icons": {
        "16": "./images/get_started16.png",
        "32": "./images/get_started32.png",
        "48": "./images/get_started48.png",
        "128": "./images/get_started128.png"
    },
    "options_page": "./html/options.html"
}